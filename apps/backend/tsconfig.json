{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src"],
  "compilerOptions": {
    "target": "es6",
    "lib": ["ESNext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "inlineSourceMap": true,

    "strict": true,
    "skipLibCheck": true
  }
}
